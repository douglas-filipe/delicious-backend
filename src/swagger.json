    "/users/reset_password": {
      "post": {
        "summary": "Recuperação de senha do usuário",
        "description": "Essa rota será responsável por enviar um email para o usuário com uma nova senha gerada",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "User": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    }
                  }
                }
              },
              "examples": {
