    "/users/register": {
      "post": {
        "summary": "Cadastro de usuário",
        "description": "Essa rota será responsável por cadastrar um novo usuário",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "User": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    }
                  }
                }
              },
              "examples": {
                "User": {
                  "value": {
                    "username": "Douglas",
                    "email": "douglas@gmail.com",
                    "password": "3423r423"
                  }
                }
              }
            }
          }
        },

        "responses": {
          "201": {
            "description": "Ok",
            "content": {
              "application/json": {
                "examples": {
                  "Users": {
                    "value": {
                      "username": "Douglas",
                      "email": "douglasfelipe.net77@gmail.com",
                      "_id": "6186cbdf4de741acc73689d7"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Caso aconteça algum erro ao criar a conta",
            "content": {
              "application/json": {
                "examples": {
                  "Users": {
                    "value": {
                      "message": "Error ao criar a conta"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
