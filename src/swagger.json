        "description": "Essa rota será responsável por cadastrar um novo usuário",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "User": {
                  "value": {
                    "username": "Douglas",
                    "email": "douglas@gmail.com",
                    "password": "3423r423"
                  }
                }
              }
            }
          }
        },

        "responses": {
          "201": {
            "description": "Ok",
            "content": {
              "application/json": {
                "examples": {
